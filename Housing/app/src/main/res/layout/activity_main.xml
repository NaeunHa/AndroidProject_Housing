<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6667AB"
    android:padding="20dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        app:layout_constraintVertical_bias="0.3"
        android:layout_marginBottom="80dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@id/dateContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        app:layout_constraintVertical_chainStyle="packed"
        tools:src="@color/white" />

    <LinearLayout
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:id="@+id/dateContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/sidoContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="날짜"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/startDate"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textColor="#6667AB"
            android:backgroundTint="@color/white"
            android:layout_weight="1.25"
            tools:text="2022-03-05" />

        <Button
            android:textSize="16sp"
            android:id="@+id/endDate"
            android:backgroundTint="@color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#6667AB"
            android:layout_weight="1.25"
            tools:text="2022-03-06" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="40dp"
        android:padding="5dp"
        android:gravity="center"
        android:id="@+id/sidoContainer"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dateContainer"
        app:layout_constraintBottom_toTopOf="@id/searchBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="지역"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sidoBtn"
            android:text=""
            tools:text="부산광역시"
            android:backgroundTint="@color/white"
            android:textSize="16sp"
            android:textColor="#6667AB"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:backgroundTint="@color/white"
        android:textColor="#6667AB"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="검           색"
        android:id="@+id/searchBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sidoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>